---
import HamburgerMenu from "./HamburgerMenu.astro";
---

<header class="header">
    <div class="container header-content">
        <a href="/" class="logo">
            <img
                src="/favicon.jpeg"
                alt="Farmacia Albiñana Logo"
                class="logo-img"
            />
            <span class="logo-text">Albiñana</span>
        </a>
        <div class="menu-wrapper">
            <HamburgerMenu />
        </div>
    </div>
</header>

<style>
    .header {
        height: var(--header-height);
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        transition: all var(--transition-fast);
    }

    .header-content {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 12px;
        font-family: var(--font-heading);
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--color-text);
    }

    .logo-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--color-primary);
    }

    .logo-text {
        background: linear-gradient(90deg, #1a1a1a, #4a4a4a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
