<hamburger-menu class="hamburger-menu">
    <button class="toggle-btn" aria-label="Toggle Menu" aria-expanded="false">
        <div class="bar bar-1"></div>
        <div class="bar bar-2"></div>
        <div class="bar bar-3"></div>
    </button>

    <nav class="nav-overlay">
        <ul class="nav-links">
            <li style="--i:1;">
                <a href={import.meta.env.BASE_URL}>Inicio</a>
            </li>
            <li style="--i:2;">
                <a href={`${import.meta.env.BASE_URL}/products`}
                    >Productos y Ofertas</a>
            </li>
            <li style="--i:3;">
                <a href={`${import.meta.env.BASE_URL}/blog`}>Blog</a>
            </li>
            <li style="--i:4;">
                <a href={`${import.meta.env.BASE_URL}/#contact`}>Contacto</a>
            </li>
        </ul>
        <div class="nav-decoration"></div>
    </nav>
</hamburger-menu>

<script>
    class HamburgerMenu extends HTMLElement {
        constructor() {
            super();
            const toggleBtn = this.querySelector(".toggle-btn");
            const navOverlay = this.querySelector(".nav-overlay");
            const links = this.querySelectorAll("a");

            toggleBtn?.addEventListener("click", () => {
                const isExpanded =
                    toggleBtn.getAttribute("aria-expanded") === "true";
                toggleBtn.setAttribute("aria-expanded", String(!isExpanded));
                navOverlay?.classList.toggle("active");
                toggleBtn.classList.toggle("active");
                document.body.style.overflow = !isExpanded ? "hidden" : "";
            });

            // Close menu when clicking a link
            links.forEach((link) => {
                link.addEventListener("click", () => {
                    toggleBtn?.setAttribute("aria-expanded", "false");
                    navOverlay?.classList.remove("active");
                    toggleBtn?.classList.remove("active");
                    document.body.style.overflow = "";
                });
            });
        }
    }

    customElements.define("hamburger-menu", HamburgerMenu);
</script>

<style>
    .hamburger-menu {
        position: relative;
        z-index: 1000;
    }

    .toggle-btn {
        background: none;
        border: none;
        cursor: pointer;
        width: 40px;
        height: 40px;
        position: relative;
        z-index: 1001;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6px;
    }

    .bar {
        width: 30px;
        height: 3px;
        background-color: var(--color-text);
        border-radius: 3px;
        transition: all 0.4s cubic-bezier(0.68, -0.6, 0.32, 1.6);
    }

    /* Hamburger Animation */
    .toggle-btn.active .bar-1 {
        transform: rotate(45deg) translate(5px, 6px);
        background-color: var(--color-primary-dark);
    }

    .toggle-btn.active .bar-2 {
        opacity: 0;
        transform: translateX(10px);
    }

    .toggle-btn.active .bar-3 {
        transform: rotate(-45deg) translate(6px, -7px);
        background-color: var(--color-primary-dark);
    }

    /* Overlay */
    .nav-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.5s ease-in-out;
        clip-path: circle(0% at top right);
    }

    .nav-overlay.active {
        opacity: 1;
        visibility: visible;
        clip-path: circle(150% at top right);
    }

    .nav-links {
        text-align: center;
    }

    .nav-links li {
        margin: 20px 0;
        transform: translateY(30px);
        opacity: 0;
        transition: all 0.5s ease;
        transition-delay: calc(var(--i) * 0.1s);
    }

    .nav-overlay.active .nav-links li {
        transform: translateY(0);
        opacity: 1;
    }

    .nav-links a {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--color-text);
        position: relative;
        overflow: hidden;
        display: inline-block;
    }

    .nav-links a::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 4px;
        background-color: var(--color-primary);
        transition: width 0.3s ease;
    }

    .nav-links a:hover {
        color: var(--color-primary-dark);
    }

    .nav-links a:hover::after {
        width: 100%;
    }

    @media (max-width: 768px) {
        .nav-links a {
            font-size: 2rem;
        }
    }
</style>
